<div class="post post--text">
  <h2 class="post__title"><%= raw render_with_pipeline(text_post.title, :emoji) %></h2>
  <div class="post__body">
    <%= raw render_with_pipeline(text_post.body, [:markdown, :sanitize, :emoji]) %>
  </div>
  <%= render 'posts/post_actions', :post => post_parent %>
</div>
